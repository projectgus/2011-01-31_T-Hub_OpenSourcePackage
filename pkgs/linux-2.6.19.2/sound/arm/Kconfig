# ALSA ARM drivers

menu "ALSA ARM devices"
	depends on SND!=n && ARM

config SND_AUDIO_AMP
	tristate "Sagem audio amplifier"
	default y
	help
	  Say Y here if you want to control the gpio amplifer MX1500, 
	  TPA2012.
	  Driver can 
		  -	turn amplifier on or off
		  -	set the output gain.

config SND_SA11XX_UDA1341
	tristate "SA11xx UDA1341TS driver (iPaq H3600)"
	depends on ARCH_SA1100 && SND && L3
	select SND_PCM
	help
	  Say Y here if you have a Compaq iPaq H3x00 handheld computer
	  and want to use its Philips UDA 1341 audio chip.

	  To compile this driver as a module, choose M here: the module
	  will be called snd-sa11xx-uda1341.

config SND_ARMAACI
	tristate "ARM PrimeCell PL041 AC Link support"
	depends on SND && ARM_AMBA
	select SND_PCM
	select SND_AC97_CODEC

config SND_PXA2XX_PCM
	tristate
	select SND_PCM

config SND_PXA2XX_AC97
	tristate "AC97 driver for the Intel PXA2xx chip"
	depends on ARCH_PXA && SND
	select SND_PXA2XX_PCM
	select SND_AC97_CODEC
	help
	  Say Y or M if you want to support any AC97 codec attached to
	  the PXA2xx AC97 interface.

config SND_MXC_PMIC
	tristate "MXC PMIC sound system"
	depends on ARCH_MXC && MXC_DAM && MXC_SSI && MXC_MC13783_AUDIO
	default y
	select SND_PCM
	help
	  Say Y here to include support for soundcards based on the
	  MC13783 chip.

	  To compile this driver as a module, choose M here: the module
	  will be called snd-mc13783.

config SND_MXC_PMIC_USE_CONV_TABLE
	bool "Compute gain using conversion table"
	depends on SND_MXC_PMIC
	default n
	help
	  Say Y here if you want to compute output gain 
	  using a conversion table : conversion is not 
	  linear and is different if headset is plugged.
	  Say N if you want output gain to be a percentage 
	  based on alsa volume. Headset volume max is 
	  limited by output volume max.
	  

choice	
   	prompt "MXC DECT interface"
	default SND_MXC_DECT_USB
	help
	  Say Y here to activate DECT interface.

config SND_MXC_DECT
	tristate "MXC DECT OEM sound system"
	select SND_PCM
	depends on MXC_DAM && MXC_SSI
	help
	  Say Y here to include support for soundcards based on the
	  Dect chip using OEM interface.

config SND_MXC_DECT_USB
	tristate "MXC DECT USB sound system"
	select SND_PCM
	depends on USB_DECT
	help
	  Say Y here to include support for soundcards based on the
	  Dect chip using USB interface.
endchoice

endmenu
source "sound/arm/bridge/Kconfig"

